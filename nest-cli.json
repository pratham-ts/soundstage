{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "entryFile": "src/main",
  "sourceRoot": "./",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "common/proto/**/*.proto", "outDir": "dist/common" }
    ],
    "watchAssets": true
  }
}
